@model AndradeEduardoExamenProgreso1.Models.Recompensas

@{
    ViewData["Title"] = "Crear Recompensa";
}

<h2>Crear Nueva Recompensa</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="puntos" class="control-label"></label>
        <input asp-for="puntos" class="form-control" />
        <span asp-validation-for="puntos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tipoRecompensa" class="control-label"></label>
        <input asp-for="tipoRecompensa" class="form-control" />
        <span asp-validation-for="tipoRecompensa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="fechaInicio" class="control-label"></label>
        <input asp-for="fechaInicio" type="date" class="form-control" />
        <span asp-validation-for="fechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Cliente</label>
        <select asp-for="clienteId" asp-items="ViewBag.Clientes" class="form-control"></select>
        <span asp-validation-for="clienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Reserva</label>
        <select asp-for="reservaId" asp-items="ViewBag.Reservas" class="form-control"></select>
        <span asp-validation-for="reservaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
