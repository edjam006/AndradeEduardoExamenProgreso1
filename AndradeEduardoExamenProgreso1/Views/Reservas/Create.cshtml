@model AndradeEduardoExamenProgreso1.Models.Reserva

@{
    ViewData["Title"] = "Crear Reserva";
}

<h2>Crear Nueva Reserva</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="clienteId">Seleccione un cliente:</label>
        <select asp-for="clienteId" class="form-control" asp-items="ViewBag.Clientes">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="clienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="fechaIngreso" class="control-label"></label>
        <input asp-for="fechaIngreso" type="date" class="form-control" />
        <span asp-validation-for="fechaIngreso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="fechaSalida" class="control-label"></label>
        <input asp-for="fechaSalida" type="date" class="form-control" />
        <span asp-validation-for="fechaSalida" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
