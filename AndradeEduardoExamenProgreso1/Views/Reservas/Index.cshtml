@model IEnumerable<AndradeEduardoExamenProgreso1.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<h2>Reservas Registradas</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create")">Nueva Reserva</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Fecha Ingreso</th>
            <th>Fecha Salida</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in Model)
        {
            <tr>
                <td>@reserva.Cliente?.Nombre</td>
                <td>@reserva.fechaIngreso.ToShortDateString()</td>
                <td>@reserva.fechaSalida.ToShortDateString()</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = reserva.reservaId })">Editar</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = reserva.reservaId })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
