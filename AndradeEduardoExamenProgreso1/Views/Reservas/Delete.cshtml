@model AndradeEduardoExamenProgreso1.Models.Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<h2>¿Eliminar Reserva?</h2>

<div>
    <h4>Detalles de la Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente?.Nombre</dd>

        <dt class="col-sm-2">Fecha Ingreso</dt>
        <dd class="col-sm-10">@Model.fechaIngreso.ToShortDateString()</dd>

        <dt class="col-sm-2">Fecha Salida</dt>
        <dd class="col-sm-10">@Model.fechaSalida.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="reservaId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
    </form>
</div>
