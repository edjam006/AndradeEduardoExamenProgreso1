@model IEnumerable<AndradeEduardoExamenProgreso1.Models.Cliente>

@{
    ViewData["Title"] = "Clientes Registrados";
}

<h2>Clientes Registrados</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create")">Registrar Nuevo Cliente</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID Cliente</th>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Presupuesto</th>
            <th>Tiene Puntos</th>
            <th>Fecha Aproximada Reserva</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.clienteId</td>
                <td>@cliente.Nombre</td>
                <td>@cliente.Edad</td>
                <td>@cliente.Presupuesto.ToString("C")</td>
                <td>@(cliente.tienePuntos ? "Sí" : "No")</td>
                <td>@cliente.fechaAproximadaReserva.ToShortDateString()</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = cliente.clienteId })">Editar</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = cliente.clienteId })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
