@model AndradeEduardoExamenProgreso1.Models.Cliente

@{
    ViewData["Title"] = "Registro de Usuario";
}



@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        Hay errores en el formulario. Por favor corrige los campos.
    </div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Errores:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}


<div class="formContainer">
    <form asp-action="Agregar" method="post">
        <div class="form-group">
            <label asp-for="clienteId"></label>
            <input asp-for="clienteId" class="form-control" />
            <span asp-validation-for="clienteId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Edad"></label>
            <input asp-for="Edad" class="form-control" />
            <span asp-validation-for="Edad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Presupuesto"></label>
            <input asp-for="Presupuesto" class="form-control" />
            <span asp-validation-for="Presupuesto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tienePuntos"></label>
            <input asp-for="tienePuntos" type="password" class="form-control" />
            <span asp-validation-for="tienePuntos" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="fechaAproximadaReserva"></label>
            <input asp-for="fechaAproximadaReserva" type="password" class="form-control" />
            <span asp-validation-for="fechaAproximadaReserva" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-primary mt-3">Agregar</button>

        <a class="btn btn-secondary mt-3" href="@Url.Action("Index", "Home")">Iniciar Sesión</a>
    </form>
</div>


@section Scripts {
    @{
        // Esto hace que las validaciones se hagan de manera rapida sin recargar la página
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}